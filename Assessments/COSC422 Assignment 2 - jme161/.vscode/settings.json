{
    "actionButtons": {
        "defaultColor": "light-grey",
        "reloadButton": " ",
        "commands": [
            {
                "name": "Clean $(trashcan)",
                "singleInstance": true,
                "command": "make clean",
            }, {
                "name": "Build $(checklist)",
                "singleInstance": true,
                "command": "make",
            }, {
                "name": "Program $(arrow-right)",
                "singleInstance": true,
                "command": "make program",
            }
        ]
    },
    "files.associations": {
        "ostream": "cpp",
        "*.ipp": "cpp",
        "array": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "new": "cpp"
    }
}

